<h3>Welcome</h3>
<% if user_signed_in? %>
  <% if current_user.admin? %>
    <h3>Admin</h3>
    <p><%= link_to 'User count:', users_path %> <%= User.count %></p>
  <% else %>
    <h4>You signed up with <%= current_user.product_id if current_user.product_id %></h4>
	<p>Email: <%= current_user.email if current_user.email %></p>
	<h4>Download the book.</h4>
    <%= link_to 'Download PDF', products_path('product.pdf'), :class => 'btn btn-success btn-large' %>
  <% end %>
<% else %>
	<% if @products.count == 1 %>
	
	<h3>Purchase your membership</h3>

	<div class="container-fluid">
		<div class="row" >
			<div class="col-md-12" >
				<div class="col-md-3" >
					<% @products.each do |product| %>
    				<span><%= image_tag 'logo_bitcoin_france.png', size: '120x120', style: "align:center;" %></span>

					<article style="text-align:center;">
					<%= product.title %></br></br>
					<%= number_to_currency(product.price.to_f/100, unit: "â‚¬", separator: ".", delimiter: " ", format: "%n %u") %></br>
						 <%= render partial: "visitors/purchase", locals: { :product => product } %>
					</article>
					<% end %>
    			</div>

			</div></br></br>
		</div>
	</div>
	
	<% else %>
  		<h3>Join us: select your membership</h3>

		<div class="container-fluid">
			<div class="row" >
			<% @products.each_slice(4) do |products_for_row| %>
				<div class="col-md-12" >
				<% products_for_row.each do |product| %>
					<div class="col-md-3" >

	    			<%= render product %>

	    			</div>
				<% end %>
				</div></br></br>
			<% end %>
			</div>
		</div>
		<% end %>

<% end %>

